generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
}

model Time {
  id         String   @id @default(uuid())
  nome       String
  shieldImg  String?  @map("shield_img")
  city       String?
  stateCode  String?  @map("state_code")
  startDate  DateTime? @map("start_date")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  jogadores            Jogador[]
  partidas             Partida[]
  escalacoes           Escalacao[]

  @@map("times")
}

model Jogador {
  id              String    @id @default(uuid())
  timeId          String    @map("time_id")
  nomeCompleto    String    @map("nome_completo")
  posicaoPrincipal String   @map("posicao_principal")
  peDominante     String    @map("pe_dominante")
  dataNascimento  DateTime? @map("data_nascimento")
  telefone        String?
  fotoUrl         String?   @map("foto_url")
  ativo           Boolean   @default(true)
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  time                Time      @relation(fields: [timeId], references: [id], onDelete: Cascade)
  escalacoesJogadores EscalacaoJogador[]
  partidasParticipacao PartidaParticipacao[]
  eventosPartida      EventoPartida[] @relation("JogadorEvento")
  eventosRelacionados EventoPartida[] @relation("JogadorRelacionado")

  @@map("jogadores")
}

model Partida {
  id                 String    @id @default(uuid())
  timeId             String    @map("time_id")
  dataHora           DateTime  @map("data_hora")
  local              String
  adversarioNome     String    @map("adversario_nome")
  tipo               String
  status             String    @default("agendada")
  golsPro            Int?      @map("gols_pro")
  golsContra         Int?      @map("gols_contra")
  observacoesTecnico String?   @map("observacoes_tecnico")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  time                Time      @relation(fields: [timeId], references: [id], onDelete: Cascade)
  partidasParticipacao PartidaParticipacao[]
  eventosPartida      EventoPartida[]

  @@map("partidas")
}

model Escalacao {
  id             String    @id @default(uuid())
  timeId         String    @map("time_id")
  nome           String
  esquemaTatico  String    @map("esquema_tatico")
  descricao      String?
  ativa          Boolean   @default(false)
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  time               Time      @relation(fields: [timeId], references: [id], onDelete: Cascade)
  escalacoesJogadores EscalacaoJogador[]

  @@map("escalacoes")
}

model EscalacaoJogador {
  id              String   @id @default(uuid())
  escalacaoId     String   @map("escalacao_id")
  jogadorId       String   @map("jogador_id")
  titular         Boolean  @default(false)
  posicaoEmCampo  String   @map("posicao_em_campo")
  numeroCamisa    Int?     @map("numero_camisa")
  ordem           Int?
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  escalacao Escalacao @relation(fields: [escalacaoId], references: [id], onDelete: Cascade)
  jogador   Jogador   @relation(fields: [jogadorId], references: [id], onDelete: Cascade)

  @@map("escalacoes_jogadores")
}

model PartidaParticipacao {
  id             String   @id @default(uuid())
  partidaId      String   @map("partida_id")
  jogadorId      String   @map("jogador_id")
  titular        Boolean  @default(false)
  minutosJogados Int?     @map("minutos_jogados")
  notaTecnica    Float?   @map("nota_tecnica")
  observacoes    String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  partida Partida @relation(fields: [partidaId], references: [id], onDelete: Cascade)
  jogador Jogador @relation(fields: [jogadorId], references: [id], onDelete: Cascade)

  @@map("partidas_participacao")
}

model EventoPartida {
  id                    String   @id @default(uuid())
  partidaId             String   @map("partida_id")
  jogadorId             String   @map("jogador_id")
  tipoEvento            String   @map("tipo_evento")
  minuto                Int
  relacionadoJogadorId  String?  @map("relacionado_jogador_id")
  observacao            String?
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  partida           Partida  @relation(fields: [partidaId], references: [id], onDelete: Cascade)
  jogador           Jogador  @relation("JogadorEvento", fields: [jogadorId], references: [id], onDelete: Cascade)
  jogadorRelacionado Jogador? @relation("JogadorRelacionado", fields: [relacionadoJogadorId], references: [id])

  @@map("eventos_partida")
}
